---
interface Props {
  className?: string
  title: string
}

const { className, title } = Astro.props
---

<h2 class={`text-2xl md:text-3xl font-extralight mb-4 bg-linear-to-r from-secondary via-green-500 to-emerald-500 text-transparent bg-clip-text block w-fit font-mono ${className}`}>
    {title}
</h2>