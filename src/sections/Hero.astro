---
 import BadgetWork from "../components/BadgetWork.astro"
 import Button from "../components/Button.astro"
 import ContactIcon from "../components/svg/ContactIcon.astro"
 import LinkIcon from "../components/svg/LinkIcon.astro"
 import GitIcon from "../components/svg/GitIcon.astro"
 import PinIcon from "../components/svg/PinIcon.astro"

 const personalImageAlt: string = "Cristina Malmierca"
---

<div class="max-w-xl md:flex md:justify-center md:items-center md:flex-col md:text-center pt-10 md:pt-0">

    <div class="flex justify-between items-center">
        <div class="flex items-center gap-5 mb-5">
            <div class="inline-flex items-center justify-center rounded-full w-fit">
                <img src="/perfilweb.webp" alt=`${personalImageAlt}` class="size-20 rounded-full shadow-2xl" />
            </div>
            <div>
                <BadgetWork>Open to work</BadgetWork>
                <div class="flex text-xs gap-1 items-center justify-center mt-1 px-3 py-2">
                    <PinIcon /> 
                    <p class="text-xs mb-0 pb-0">Lleida, España</p>
                </div>
            </div>
        </div>
    </div>

    <div>
        <h1 class="font-mono text-2xl md:text-3xl font-thin">whoami <br> <span class="text-4xl md:text-5xl font-thin mb-2 [&>strong]:font-bold">Cristina Malmierca</span></h1>
        <h2 class="text-xl md:text-2xl font-bold mb-4 bg-linear-to-r from-secondary via-green-500 to-emerald-500 inline-block text-transparent bg-clip-text">&lt; Full-stack web<br class="md:hidden"> Developer &gt;</h2>
    </div>

    <div>
        <p class="mt-6 text-md md:text-xl text-dark dark:text-primary"><strong>Estudiante de Desarrollo de Aplicaciones Web<br>Técnico Superior en Márketing y Publicidad</strong>
        </p> 
    </div>

    <nav class="flex items-center gap-10 mt-10 md:mt-6">
        <Button href="mailto:cmsalvador92@gmail.com" alt="Contacta por correo">
            <ContactIcon />
        </Button>
        <Button href="https://www.linkedin.com/in/cristina-malmierca/" alt="Acceder a perfil de LinkedIn">
            <LinkIcon />
        </Button>
        <Button href="https://github.com/ceemeese" alt="Acceder a perfil de GitHub">
            <GitIcon />
        </Button>
    </nav>

</div>



<script>

    import { createTimeline, stagger, utils, text } from 'animejs';

    const { words, chars } = text.split('h1', {
    words: { wrap: 'clip' },
    chars: true,
    });

    createTimeline({
        defaults: { ease: 'inOut(3)', duration: 650 }
    })
    .add(words, {
        y: [$el => +$el.dataset.line % 2 ? '100%' : '-100%', '0%'],}, stagger(125))
    .init();

</script>