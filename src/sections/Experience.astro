---
import SectionTitle from '../components/SectionTitle.astro';
import { EDUCATION } from '../consts/education';
---

<div class="flex flex-col">
    <SectionTitle title="Formación" />
    
    <div class="relative py-2">
        
        <div class="absolute left-4 md:left-8 top-3 bottom-0 w-0.5 bg-gradient-to-b from-secondary/60 to-transparent"></div>
        
        <div class="space-y-8 md:space-y-8">
            {EDUCATION.map((item, index) => (
                <div class="relative flex items-start gap-4 md:gap-8">
                    
                    <div class="relative w-3 h-3 mt-1 ml-2.75 md:ml-6.75 rounded-full bg-emerald-400 flex items-center justify-center"></div>
                    
                    
                    <div class="flex-1 pb-8">
                        
                        <div class="text-sm font-mono text-secondary dark:text-secondary mb-1">
                            {item.year}
                        </div>
                        
                        
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                            {item.title}
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                            {item.institution}
                        </p>
                        
                        <!-- Descripción -->
                        <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed mb-3">
                            {item.description}
                        </p>
                        
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>